# ============================================
# DATABASE CONFIGURATION
# ============================================

# Development (Local MySQL)
DB_HOST=127.0.0.1
DB_PORT=3307
DB_USER=root
DB_PASSWORD=root
DB_NAME=media_db

# Production (PlanetScale) - Replace with your credentials
# Get these from: https://planetscale.com → Your Database → Connect
# DB_HOST=aws.connect.psdb.cloud
# DB_USER=your_planetscale_username
# DB_PASSWORD=pscale_pw_xxxxxxxxx
# DB_NAME=media-promote-db
# DB_PORT=3306

# ============================================
# DEFAULT ADMIN USER
# ============================================
# Credentials untuk admin pertama (akan di-seed ke database)
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=change_this_password

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Bcrypt cost factor (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=10

# Session secret key (MUST be random and unique!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING_IN_PRODUCTION

# Hashids salt (MUST be random and unique!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
HASHIDS_SALT=CHANGE_THIS_TO_RANDOM_STRING_IN_PRODUCTION

# ============================================
# EMAIL CONFIGURATION
# ============================================
# SMTP settings untuk email notifikasi
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email_username
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@yourdomain.com

# Development: Gunakan Ethereal Email (https://ethereal.email)
# MAIL_HOST=smtp.ethereal.email
# MAIL_PORT=587
# MAIL_USER=<get from ethereal.email>
# MAIL_PASSWORD=<get from ethereal.email>

# Production: Gunakan service email seperti:
# - SendGrid
# - Mailgun
# - AWS SES
# - Gmail SMTP (not recommended for production)

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment mode
NODE_ENV=development

# Application URL (untuk email links, dll)
APP_URL=http://localhost:3000

# ============================================
# OPTIONAL SETTINGS
# ============================================
# API rate limiting (requests per window)
# LOGIN_RATE_LIMIT=5
# LOGIN_RATE_WINDOW=900000

# File upload settings
# MAX_FILE_SIZE=5242880
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Session TTL in milliseconds (default 24 hours)
# SESSION_TTL=86400000
